<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <div class = "well">
  <div class = "page-header">
    <h3>Sign into street food recipes</h3>
  </div>

  <%= form_tag sign_in_path do |f| %>

    <% if @user.errors.any? %>
      <% @user.errors.full_messages.sort_by {|n| n}.each do |m| %>
        <div class = "text-danger">
          <p><%= m %></p>
        </div>
    <% end %>
    <% end %>

    <div class = "form-group">
      <%= label_tag :user_name %>
      <%= text_field_tag :user_name, nil, class: "form-control" %>
    </div>

    <div class = "form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>

    <div class = "form-group">
      <%= submit_tag "Sign In", class: "btn btn-default" %>
    </div>
  <% end %>

    </div>
  </div>
</div>
